{
  "name": "fbiesse/mongo-persistence-bundle",
  "type": "bundle",
  "description": "Minimal mongodb persistence bundle using jmsserializer",
  "keywords": ["mongodb"],
  "license": "MIT",
  "authors": [
    {
      "name": "Frédéric Biesse",
      "email": "biesse.frederic@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "mongodb/mongodb": "1.*",
    "symfony/config": "~2.3|~3.0",
    "symfony/http-foundation": "~2.3|~3.0",
    "symfony/http-kernel": "~2.3|~3.0",
    "symfony/dependency-injection": "~2.3|~3.0"

  },
  "require-dev": {
    "atoum/atoum": "^3.2",
    "jms/serializer": "1.*",
    "doctrine/annotations": "^1.4.0",
    "symfony/yaml": "^3.3"
  },
  "suggest": {
    "jms/serializer": "Allow to use the the class JMSArraySerializerService so serialize objects into arrays"
  },
  "autoload": {
    "psr-4": {
      "FBiesse\\Sf\\Bundle\\MongoPersistenceBundle\\": "src/"
    }
  }
}
